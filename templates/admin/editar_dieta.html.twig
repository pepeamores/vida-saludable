{% extends 'base.html.twig' %}

{% block title %}Editar Dieta - Admin{% endblock %}
{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}
{% block body %}
<div class="position-fixed top-0 start-0 m-3">
  <a href="{{ path('admin_ver_dietas') }}" class="btn btn-primary">Volver</a>
</div>

<header class="header text-center">
  <div class="header-content">
    <h2>Editar Dieta</h2>
    <p>Modifica los datos de la dieta.</p>
  </div>
</header>

<div class="container mt-5">
    <h2 class="mb-4 text-center">Editar Dieta</h2>

    {% if mensaje %}
        <div class="alert alert-info">{{ mensaje }}</div>
    {% endif %}

    <form method="post" class="bg-white p-4 rounded shadow" style="max-width: 600px; margin: 0 auto;">
        <div class="mb-3">
            <label class="form-label">Nombre</label>
            <input type="text" name="nombre" class="form-control" value="{{ dieta.nombre }}" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Alimentos</label>
           <textarea name="alimentos" class="form-control" required>{{ dieta.alimentos_texto }}</textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Calorías</label>
            <input type="number" name="calorias" class="form-control" value="{{ dieta.calorias }}">
        </div>
        <div class="mb-3">
            <label class="form-label">Objetivo</label>
            <select name="objetivo" class="form-select" required>
                <option value="perder_peso" {{ dieta.objetivo == 'perder_peso' ? 'selected' : '' }}>Perder peso</option>
                <option value="mantener_peso" {{ dieta.objetivo == 'mantener_peso' ? 'selected' : '' }}>Mantener peso</option>
                <option value="ganar_musculo" {{ dieta.objetivo == 'ganar_musculo' ? 'selected' : '' }}>Ganar masa muscular</option>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Cantidad de ejercicio</label>
            <select name="ejercicio" class="form-select" required>
                <option value="sedentario" {{ dieta.ejercicio == 'sedentario' ? 'selected' : '' }}>Sedentario (poco o ningún ejercicio)</option>
                <option value="ligero" {{ dieta.ejercicio == 'ligero' ? 'selected' : '' }}>Ligero (ejercicio ligero 1-3 días/semana)</option>
                <option value="moderado" {{ dieta.ejercicio == 'moderado' ? 'selected' : '' }}>Moderado (ejercicio moderado 3-5 días/semana)</option>
                <option value="intenso" {{ dieta.ejercicio == 'intenso' ? 'selected' : '' }}>Intenso (ejercicio fuerte 6-7 días/semana)</option>
            </select>
        </div>
        <button class="btn btn-success w-100">Guardar cambios</button>
    </form>
</div>
{% endblock %}