{% extends 'base.html.twig' %}

{% block title %}Editar Ejercicio - Admin{% endblock %}
{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}
{% block body %}
<div class="position-fixed top-0 start-0 m-3">
  <a href="{{ path('admin_ver_ejercicios') }}" class="btn btn-primary">Volver</a>
</div>

<header class="header text-center">
  <div class="header-content">
    <h2>Editar Ejercicio</h2>
    <p>Modifica los datos del ejercicio.</p>
  </div>
</header>

<div class="container mt-5">
    <h2 class="mb-4 text-center">Editar Ejercicio</h2>

    {% if mensaje %}
        <div class="alert alert-info">{{ mensaje }}</div>
    {% endif %}

    <form method="post" class="bg-white p-4 rounded shadow" style="max-width: 600px; margin: 0 auto;">
        <div class="mb-3">
            <label class="form-label">Nombre del ejercicio</label>
            <input type="text" class="form-control" name="nombre" value="{{ ejercicio.nombre }}" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Grupo muscular</label>
            <input type="text" class="form-control" name="grupo" value="{{ ejercicio.grupo_muscular }}" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Nivel</label>
            <select name="nivel" class="form-select" required>
                <option value="principiante" {{ ejercicio.nivel == 'principiante' ? 'selected' : '' }}>Principiante</option>
                <option value="intermedio" {{ ejercicio.nivel == 'intermedio' ? 'selected' : '' }}>Intermedio</option>
                <option value="avanzado" {{ ejercicio.nivel == 'avanzado' ? 'selected' : '' }}>Avanzado</option>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Descripción</label>
            <textarea class="form-control" name="descripcion" rows="3" required>{{ ejercicio.descripcion }}</textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Duración aproximada (minutos)</label>
            <input type="number" class="form-control" name="duracion" value="{{ ejercicio.duracion_aprox_min }}" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Repeticiones</label>
            <input type="text" class="form-control" name="repeticiones" value="{{ ejercicio.repeticiones }}" required>
        </div>
        <div class="mb-3">
            <label class="form-label">URL del video</label>
            <input type="url" class="form-control" name="video" value="{{ ejercicio.video }}">
        </div>
        <button type="submit" class="btn btn-success w-100">Guardar cambios</button>
    </form>
</div>
{% endblock %}